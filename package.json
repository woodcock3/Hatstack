{
  "name": "hatstack",
  "version": "1.0.0",
  "description": "Basic Starter Kit for [GoHugo](https://gohugo.io/), [Tailwind CSS](https://www.tailwindcss.com) and [Alpine.js](https://alpinejs.dev/).",
  "main": "index.js",
  "scripts": {
    "dev:css": "npx tailwindcss -i input.css -o static/output.css -w",
    "dev:alpine": "cp node_modules/alpinejs/dist/cdn.js static/alpine.js",
    "dev:hugo": "hugo server",
    "build:css": "NODE_ENV=production npx tailwindcss -i input.css -o static/output.css -m",
    "build:alpine": "cp node_modules/alpinejs/dist/cdn.min.js static/alpine.js",
    "build:hugo": "hugo --cleanDestinationDir --minify",
    "start": "npm-run-all --parallel dev:*",
    "minify": "npm-run-all --parallel build:css build:alpine build:hugo"
    "serve": "hugo server --disableFastRender",
    "serve:network": "hugo server --bind=0.0.0.0 --baseURL=http://0.0.0.0:1313 --disableFastRender",
    "build": "hugo --gc --minify"
  },
  "author": "woodcock3",
  "license": "ISC",
  "devDependencies": {
    "@builder.io/partytown": "^0.5.0",
    "@tannerhodges/snap-slider": "^2.0.3",
    "alpinejs": "^3.7.0",
    "autoprefixer": "^10.2.3",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.0.0",
    "@tailwindcss/typography": "^0.5.2",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/woodcock3/Hatstack.git"
  },
  "keywords": [
    "Hugo",
    "Go",
    "Tailwind",
    "Alpine",
    "Postcss"
  ],
  "bugs": {
    "url": "https://github.com/woodcock3/Hatstack/issues"
  },
  "homepage": "https://github.com/woodcock3/Hatstack#readme"
}
